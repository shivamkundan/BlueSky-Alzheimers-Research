#:set BTN_WIDTH 0.7
#:set BTN_HEIGHT 0.5
#:set IMG_SOURCE 'pics/logo_minimal.png'
#:set IMG_SIZE (618,440)

<LandingPage>:
    id:LandingPage

    BoxLayout:
        my_im:my_im
        orientation: 'vertical'

        Widget:
            size_hint_y:0.8

        Image:
            id:my_im
            source: IMG_SOURCE
            opacity:0.85
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size: IMG_SIZE
        Widget:
            size_hint_y:0.5

        Button:
            text:'Risk Assesment'
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint:BTN_WIDTH,BTN_HEIGHT  #separate size hints results in clock iteration error
            font_style:'Button'
            on_release:
                root.manager.current="RiskAssesmentPage"
                root.manager.transition.direction="left"
        Widget:
            size_hint_y:0.05

        Button:
            text:'Educational Resources'
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint:BTN_WIDTH,BTN_HEIGHT  #separate size hints results in clock iteration error
            font_style:'Button'
        Widget:
            size_hint_y:0.05

        Button:
            text:'Cognitive Rehabilitation'
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint:BTN_WIDTH,BTN_HEIGHT  #separate size hints results in clock iteration error
            font_style:'Button'
        Widget:
            size_hint_y:0.05

        Button:
            text:'About'
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint:BTN_WIDTH,BTN_HEIGHT  #separate size hints results in clock iteration error
            font_style:'Button'
            on_release:
                root.manager.transition.direction="left"
                root.manager.current="AboutPage"
        Widget

        ScaleLabel:
            text: 'Human & Behavioral Sciences\nSouthern Illinois University, Carbondale'
            halign: 'center'
            font_size: self.height * 0.18
            padding: dp(0), dp(0)
            spacing: dp(-10), dp(-10)
            size_hint_y: 0.5
