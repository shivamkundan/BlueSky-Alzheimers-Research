#:set BTN_WIDTH 0.7
#:set BTN_HEIGHT 0.5
# #:set IMG_SOURCE 'pics/logo_minimal.png'
#:set IMG_SOURCE 'pics/logo_minimal_white.png'
#:set IMG_SIZE (618,440)
<HiddenIcon_ActionPrevious@ActionPrevious>:
    title: ''   # app.title if app.title is not None else 'Action Previous'
    with_previous: False
    app_icon: ''
    app_icon_width: 0
    app_icon_height: 0
    size_hint_x: None
    width: len(self.title) * 10


<LandingPage>:
	id:LandingPage

	BoxLayout:
		my_im:my_im
		orientation: 'vertical'

		ActionBar:
			# use_separator:True
			# separator_width:100
			ActionView:
				HiddenIcon_ActionPrevious:
				# # ActionPrevious:
				# ActionButton:
				# 	icon:"pics/left.png"
				ActionButton:
					text:"Home"
				ActionButton:
					important: True
					text:"                                                             "
				ActionButton:
					important: True
					# text:"btn0"
					icon:'pics/sun.png'
					on_release: app.toggle_theme()

		Widget:
			size_hint_y:0.8

		Image:
			id:my_im
			source: IMG_SOURCE
			opacity:0.85
			pos_hint:{'center_x': 0.5, 'center_y': 0.5}
			size: IMG_SIZE
		Widget:
			size_hint_y:0.5

		MyButton:
			text:'Risk Assesment'
			on_release:
				root.manager.current="RiskAssesmentPage"
				root.manager.transition.direction="left"
		Widget:
			size_hint_y:0.05

		MyButton:
			text:'Educational Resources'
		Widget:
			size_hint_y:0.05

		MyButton:
			text: "Cognitive Rehabilitation"
		Widget:
			size_hint_y:0.05

		MyButton:
			text:'About'
			on_release:
				root.manager.transition.direction="left"
				root.manager.current="AboutPage"
		Widget

		ScaleLabel:
			text: 'Human & Behavioral Sciences\nSouthern Illinois University, Carbondale'
			halign: 'center'
			font_size: self.height * 0.2
			padding: dp(0), dp(0)
			spacing: dp(-10), dp(-10)
			size_hint_y: 0.5
			color: TXT_COLOR
			# font_name: '/Users/shivamkundan/Developer/HealthApp/scalasansot-cufonfonts/ScalaSansOT-Regular.otf'