#:set IMG_SOURCE 'pics/logo_minimal.png'
# #:set IMG_SOURCE 'pics/logo_minimal_white.png'
#:set IMG_SIZE (618,440)

<HiddenIcon_ActionPrevious@ActionPrevious>:
    title: ''   # app.title if app.title is not None else 'Action Previous'
    with_previous: False
    app_icon: ''
    app_icon_width: 0
    app_icon_height: 0
    size_hint_x: None
    width: len(self.title) * 10

<LandingPage>:
	id:LandingPage

	BoxLayout:
		my_im:my_im
		orientation: 'vertical'
		ActionBar:
			ActionView:
				HiddenIcon_ActionPrevious:
				ActionButton:
					text:"Home"
					background_down: self.background_normal
				ActionButton:
					important: True
					text:FILLER
				ActionButton:
					important: True
					icon:'pics/sun.png'
					on_release: app.toggle_theme()
		Widget:
			size_hint_y:0.8

		Image:
			id:my_im
			source: IMG_SOURCE
			opacity:0.85
			pos_hint:{'center_x': 0.5, 'center_y': 0.5}
			size: IMG_SIZE
		Widget:
			size_hint_y:0.5

		MyButton:
			text:'Risk Assesment'
			on_release:	self.on_release_custom("RiskAssesmentPage")

		Widget:
			size_hint_y:0.05

		MyButton:
			text:'Educational Resources'
			on_release:	self.on_release_custom("EducationalResourcesPage")
		Widget:
			size_hint_y:0.05

		MyButton:
			text: "Cognitive Rehabilitation"
			on_release:	self.on_release_custom("CognitiveRehabPage")
		Widget:
			size_hint_y:0.05

		MyButton:
			text:'About'
			on_release: self.on_release_custom("AboutPage")

		Widget

		ScaleLabel:
			id:landing_page_bottom_label
			text: 'Human & Behavioral Sciences\nSouthern Illinois University, Carbondale'
			halign: 'center'
			font_size: self.height * 0.23
			padding: dp(0), dp(0)
			spacing: dp(-10), dp(-10)
			size_hint_y: 0.5
			color: TXT_COLOR