				id:button5
				icon:'numeric-5'
				text:'Somewhat agree'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				# size_hint_y:0.8
				pos_hint:{'center_x':0.5}
				on_release: root.button_press(5)
			Widget:
				size_hint_y:0.05
			Button:
				id:button4
				icon:'numeric-4'
				text:'Neutral'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				pos_hint:{'center_x':0.5}
