#:set air_Q_main 'If the AQI is higher than 200 and if I have to stay outdoors for more than 1 hour consecutively:'

#:set air_Q0 'I expect to wear a pollution mask'
#:set air_Q1 'I want to wear a pollution mask'
#:set air_Q2 'I intend to wear a pollution mask'
#:set air_Q3 'I choose to wear a pollution mask'
#:set air_Q4 'I will wear a pollution mask'
#:set air_Q5 'I would be better wearing a pollution mask'
#:set air_Q6 'I prefer wearing a pollution mask'

#:set air_toolbar_title "Air Pollution"

# ----
<AirPollutionLandingPage>:
	BoxLayout:
		orientation: 'vertical'

		MyActionBar:
			title:air_toolbar_title

		BoxLayout:
			orientation: 'vertical'
			Label:
				size_hint_x:0.8
				# canvas.before:
				#     Color:
				#         rgba: 1, .3, .4, .85
				#     Rectangle:
				#         size: self.size
				#         pos: self.pos
				id:label1
				text_size: root.width*self.size_hint_x, None
			    size: self.texture_size
			    color: TXT_COLOR
				text: 'The Air Quality Index (AQI) is a measure of air pollution created by the United States Environmental Protection Agency. \n\nThe measure ranges from 0 to 500, with indices greater than 200 indicating risk to health.'
				font_size:'14sp'
				halign: 'left'

				# size_hint_x:0.8
				pos_hint:{'center_x':0.5}

			Label:
				size_hint_x:0.8
				id:label2
				text_size: root.width*self.size_hint_x, None
			    size: self.texture_size
			    color: TXT_COLOR
				text: 'Answer the following questions about pollution mask usage'
				halign: 'center'
				size_hint_x:0.8
				# size_hint_x:0.5
				pos_hint:{'center_x':0.5}

		Button:
			text:"Begin"
			background_color: BTN_COLOR
			font_style:'Button'
			size_hint:0.7,0.25
			pos_hint:{'center_x':0.5}
			on_release:	root.arrow_right()

		NavButtons:

# ----
<AirPollutionPage>:
	BoxLayout:
		orientation: 'vertical'

		MyActionBar:
			title:air_toolbar_title
		BoxLayout:
			size_hint_y:0.6
			orientation:'vertical'
			pos_hint:{'center_x':0.5}

			Label:
				size_hint_x:0.8
				# size_hint_y:0.6
				canvas.before:
				    Color:
				        rgba: 1, .3, .4, .85
				    Rectangle:
				        size: self.size
				        pos: self.pos
				id:label1
				text_size: root.width*self.size_hint_x, None
			    size: self.texture_size
			    color: TXT_COLOR
				text:air_Q_main
				halign:'center'
				pos_hint:{'center_x':0.5}

			# BoxLayout:
			Label:
				size_hint_x:0.8
				# size_hint_y:0.6
				id:air_pollution_q_label
				# name:"air_pollution_q_label"
				canvas.before:
				    Color:
				        rgba: 0, .4, .3, .85
				    Rectangle:
				        size: self.size
				        pos: self.pos
				text_size: root.width*self.size_hint_x, None
				color: TXT_COLOR
			    size: self.texture_size
				text: air_Q0
				halign:'center'
				pos_hint:{'center_x':0.5,'center_y':0.3}
				# pos_hint:{}

		BoxLayout:
			orientation:'vertical'
			MyButton2:
				text:'Strongly agree'
				on_release:
					root.button_press(7)
			Widget:
				size_hint_y:0.05

			MyButton2:
				text:'Agree'
				on_release:
					root.button_press(6)
			Widget:
				size_hint_y:0.05
			MyButton2:
				text:'Somewhat agree'
				on_release: root.button_press(5)
			Widget:
				size_hint_y:0.05

			MyButton2:
				text:'Neutral'
				on_release: root.button_press(4)
			Widget:
				size_hint_y:0.05

			MyButton2:
				text:'Somewhat disagree'
				on_release: root.button_press(3)
			Widget:
				size_hint_y:0.05

			MyButton2:
				text:'Disagree'
				on_release: root.button_press(2)
			Widget:
				size_hint_y:0.05

			MyButton2:
				text:'Strongly Disagree'
				on_release: root.button_press(1)

		NavButtons:

