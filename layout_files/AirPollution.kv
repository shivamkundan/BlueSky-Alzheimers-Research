				text:'Disagree'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				pos_hint:{'center_x':0.5}
				on_release: root.button_press(2)
			Widget:
				size_hint_y:0.05
			Button:
				id:button1
				icon:'numeric-1'
				text:'Strongly Disagree'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				pos_hint:{'center_x':0.5}
				on_release: root.button_press(1)

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y:0.3
