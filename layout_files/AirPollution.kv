				color_icon_root_button: app.theme_cls.accent_color
				pos_hint:{'center_x':0.5}

				on_release:
					root.button_press(7)
			Widget:
				size_hint_y:0.05
			Button:
				id:button6
				icon:'numeric-6'
				text:'Agree'
				halign:'left'
