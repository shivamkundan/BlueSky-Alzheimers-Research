#:set air_Q_main 'If the AQI is higher than 200 and if I have to stay outdoors for more than 1 hour consecutively:'

#:set air_Q0 'I expect to wear a pollution mask'
#:set air_Q1 'I want to wear a pollution mask'
#:set air_Q2 'I intend to wear a pollution mask'
#:set air_Q3 'I choose to wear a pollution mask'
#:set air_Q4 'I will wear a pollution mask'
#:set air_Q5 'I would be better wearing a pollution mask'
#:set air_Q6 'I prefer wearing a pollution mask'

# ----
<AirPollutionLandingPage>:

	BoxLayout:
		orientation: 'vertical'

		MDTopAppBar:
			title: 'Air Pollution'
			halign: 'left'
			left_action_items: [["chevron-left", lambda x: root.chevron_left()]]
			right_action_items: [["dots-vertical", lambda x:app.show_theme_picker()]]
			# right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
			elevation:8

		Widget
			size_hint_y:0.3
		MDLabel:
			text: 'The Air Quality Index (AQI) is a measure of air pollution created by the United States Environmental Protection Agency. \n\nThe measure ranges from 0 to 500, with indices greater than 200 indicating risk to health.'
			font_size:'14sp'
			halign: 'left'
			size_hint_x:0.8
			pos_hint:{'center_x':0.5}

		MDLabel:
			# font_size:'2xw0sp'
			text: 'Answer the following questions about pollution mask usage'
			# text_color:DARK_BLUE
			theme_text_color:"Hint"
			halign: 'left'
			size_hint_x:0.8
			# size_hint_x:0.5
			pos_hint:{'center_x':0.5}

		Button:
			text:"Begin"
			font_style:'Button'
			size_hint:0.7,0.25
			pos_hint:{'center_x':0.5}
			on_release:
				root.parent.ids['AirPollutionPage'].ids['android_tabs'].switch_tab('1')
				root.arrow_right()


		BoxLayout:
			orientation: 'horizontal'
			size_hint_y:0.3
			Button:
				size_hint_y:0.5
				text:'                     <                       '
				on_release:root.arrow_left()
			Button:
				size_hint_y:0.5
				text:'                     >                       '
				on_release:
					root.parent.ids['AirPollutionPage'].ids['android_tabs'].switch_tab('1')
					root.arrow_right()

<AirPollutionPage>:

	BoxLayout:
		orientation: 'vertical'
		MDTopAppBar:
			title: 'Air Pollution'
			halign: 'left'
			left_action_items: [["chevron-left", lambda x: root.chevron_left()]]
			right_action_items: [["dots-vertical", lambda x:app.show_theme_picker()]]
