			elevation:8

		BoxLayout:
			size_hint_y:0.7

			MDTabs:
				id: android_tabs
				tab_pos:'left_top'
				on_tab_switch: root.on_tab_switch(*args)

				Tab:
					text:'1'
					icon:'blank'
					BoxLayout:
						orientation:'vertical'

						MDLabel:
							text: air_Q0
							halign: 'center'
							size_hint_x:0.9

				Tab:
					text:'2'
					icon:'blank'
					BoxLayout:
						orientation:'vertical'
						MDLabel:
							text: air_Q1
							halign: 'center'
							size_hint_x:0.9
				Tab:
					text:'3'
					icon:'blank'
					BoxLayout:
						orientation:'vertical'
						MDLabel:
							text: air_Q2
							halign: 'center'
							size_hint_x:0.9
				Tab:
