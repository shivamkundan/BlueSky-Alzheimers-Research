<AirPollutionPage>:
	BoxLayout:
		orientation: 'vertical'

		AirP_ActionBar:

		BoxLayout:
			size_hint_y:1
			orientation:'vertical'
			pos_hint:{'center_x':0.5}

			Label:
				size_hint_x:0.8
				# size_hint_y:0.6
				canvas.before:
				    Color:
				        rgba: 1, .3, .4, .85
				    Rectangle:
				        size: self.size
				        pos: self.pos
				id:label1
				text_size: root.width*self.size_hint_x, None
			    size: self.texture_size
			    color: TXT_COLOR
				text:air_Q_main
				halign:'center'
				pos_hint:{'center_x':0.5}

			# BoxLayout:
			Label:
				size_hint_x:0.8
				size_hint_y:0.6
				id:air_pollution_q_label
				# name:"air_pollution_q_label"
				text_size: root.width*self.size_hint_x, None
				color: TXT_COLOR
			    size: self.texture_size
				text: air_Q0
				halign:'center'
				pos_hint:{'center_x':0.5}

		BoxLayout:
			orientation:'vertical'
			MyButton2:
				text:'Strongly agree'
				on_release:
					root.button_press(7)
			Widget:
				size_hint_y:0.05

			MyButton2:
				text:'Agree'
				on_release:
					root.button_press(6)

			Widget:
				size_hint_y:0.05
			MyButton2:
				id:button5
				icon:'numeric-5'
				text:'Somewhat agree'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				# size_hint_y:0.8
				pos_hint:{'center_x':0.5}
				on_release: root.button_press(5)
			Widget:
				size_hint_y:0.05
			MyButton2:
				id:button4
				icon:'numeric-4'
				text:'Neutral'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				pos_hint:{'center_x':0.5}
				on_release: root.button_press(4)
			Widget:
				size_hint_y:0.05
			MyButton2:
				id:button3
				icon:'numeric-3'
				text:'Somewhat disagree'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				pos_hint:{'center_x':0.5}
				on_release: root.button_press(3)
			Widget:
				size_hint_y:0.05
			MyButton2:
				id:button2
				icon:'numeric-2'
				text:'Disagree'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				pos_hint:{'center_x':0.5}
				on_release: root.button_press(2)
			Widget:
				size_hint_y:0.05
			MyButton2:
				id:button1
				icon:'numeric-1'
				text:'Strongly Disagree'
				halign:'left'
				size_hint_x:0.8
				font_style:'Button'
				pos_hint:{'center_x':0.5}
				on_release: root.button_press(1)
