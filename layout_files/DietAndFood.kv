#:set size_x 564
#:set size_y 305

#:set size_x_subtitle 733
#:set size_y_subtitle 132

<DietLandingPage>:
	BoxLayout:
		orientation: 'vertical'
		MyActionBar:
			title:diet_toolbar_title
		WrapLabel:
			text: diet_landing_blurb
			padding: dp(0), dp(30)
		Widget:
			size_hint_y:0.2
		WrapLabel:
			text: diet_landing_subtitle
			color: TXT_COLOR
			theme_text_color:"Hint"
			halign: 'center'
			size_hint_x:0.8
			pos_hint:{'center_x':0.5}
		Widget:
			size_hint_y:0.2
		MyButton3:
			text:"Begin"
			on_release:root.arrow_right()

		NavButtons

<DietAndFoodPage>:
	BoxLayout:
		orientation: 'vertical'
		MyActionBar:
			title:diet_toolbar_title

		BoxLayout:
			orientation:'vertical'
			size_hint_y:0.6
			pos_hint:{'center_x':0.5}

			Label:
				size_hint_x:0.8
				id:label1
				text_size: root.width*self.size_hint_x, None
				size: self.texture_size
				color: TXT_COLOR
				text:diet_Q0
				halign:'center'
				pos_hint:{'center_x':0.5}

			Label:
				size_hint_x:0.8
				id:q_label
				text_size: root.width*self.size_hint_x, None
				color: TXT_COLOR
				size: self.texture_size
				text:""
				halign:'center'
				pos_hint:{'center_x':0.5,'center_y':0.3}

		GridLayout:
			cols:3
			on_parent:
				for i in range(0,8): txt = "{0}".format(i); self.add_widget(button.Button(text = txt,on_release=root.button_press, background_color= BTN_COLOR, font_style='Button'))

		NavButtons

<Template>:
	Label:
		text: 'Your score is:'
		halign: 'center'

	Label:
		id:score_label
		text: ''
		halign: 'center'

	Button:
		id:restart_button
		text:'Try Again'
		font_style:'Button'
		size_hint_x:0.7
		pos_hint:{'center_x': 0.5, 'center_y': 0.5}
		on_release:root.reset_quiz()
	Widget:
		size_hint_y:0.05
	Button:
		id:next_section
		text:'Back'
		font_style:'Button'
		size_hint_x:0.7
		pos_hint:{'center_x': 0.5, 'center_y': 0.5}
		on_release:root.chevron_left()
	Widget:
		size_hint_y:0.05
	Button:
		id:next_section
		text:'Next'
		font_style:'Button'
		size_hint_x:0.7
		pos_hint:{'center_x': 0.5, 'center_y': 0.5}
		on_release:root.arrow_right()


	Label:
		size_hint_y:0.7

