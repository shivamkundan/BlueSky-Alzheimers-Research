<DietLandingPage>:

    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: diet_toolbar_title
            halign: 'left'
            left_action_items: [["chevron-left", lambda x: root.chevron_left()]]
            right_action_items: [["dots-vertical", lambda x:app.show_theme_picker()]]
            # right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            elevation:8

        Widget:
            size_hint_y:0.3
        MDLabel:
            text: diet_landing_blurb

            font_size:'14sp'
            halign: 'left'
            size_hint_x:0.8
            pos_hint:{'center_x':0.5}

        MDLabel:
            # font_size:'2xw0sp'
            text: diet_landing_subtitle
            # text_color:DARK_BLUE
            theme_text_color:"Hint"
            halign: 'left'
            size_hint_x:0.8
            # size_hint_x:0.5
            pos_hint:{'center_x':0.5}

        Button:
            text:"Begin"
            font_style:'Button'
            # size_hint_x:0.7
            pos_hint:{'center_x':0.5}
            on_release:
                root.manager.current='DietAndFoodPage'
                root.manager.transition.direction="left"
                root.parent.ids['DietAndFoodPage'].ids['android_tabs'].switch_tab('1')


        BoxLayout:
            orientation: 'horizontal'
            size_hint_y:0.3
            Button:
                # size_hint_x:1
                text:'                     <                       '
                on_release:root.arrow_left()
            Button:
                size_hint_x:1
                text:'                     >                       '
                on_release:
                    root.parent.ids['DietAndFoodPage'].ids['android_tabs'].switch_tab('1')
                    root.arrow_right()


