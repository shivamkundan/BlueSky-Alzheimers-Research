<PhysicalActivityLandingPage>:
	BoxLayout:
		orientation: 'vertical'
		MyActionBar:
			title:physical_toolbar_title
		WrapLabel:
			text: physical_landing_blurb
			padding: dp(0), dp(30)
		Widget:
			size_hint_y:0.2
		WrapLabel:
			text: physical_landing_subtitle
			color: TXT_COLOR
			halign: 'center'
			size_hint_x:0.8
			pos_hint:{'center_x':0.5}
		Widget:
			size_hint_y:0.2
		MyButton3:
			text:"Begin"
			on_release:root.arrow_right()

		NavButtons

