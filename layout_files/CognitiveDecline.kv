<CognitiveDeclineScorePage>:
    score_label:score_label
    BoxLayout:
        orientation: 'vertical'
        MyActionBar:
            title:cognitive_toolbar_title

        Label:
            text: 'Your score is:'
            halign: 'center'

        Label:
            id:score_label
            text: ''
            halign: 'center'

        MyButton2:
            text:'Try Again'
            on_release:root.reset_quiz()
        Widget:
            size_hint_y:0.05
        MyButton2:
            text:'Back'
            on_release:root.chevron_left()
        Widget:
            size_hint_y:0.05
        MyButton2:
            text:'Next'
            on_release:root.arrow_right()



        NavButtons