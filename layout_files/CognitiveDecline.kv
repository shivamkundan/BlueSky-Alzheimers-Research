<CognitiveDeclineScorePage>:
	score_label:score_label
	BoxLayout:
		orientation: 'vertical'

		MyActionBar:
			title:cognitive_toolbar_title

		BoxLayout:
			orientation:'vertical'
			Label:
				text: 'Your score is:'
				color: TXT_COLOR
				halign: 'center'
				font_size:'16sp'

			Label:
				id:score_label
				text: ''
				color: TXT_COLOR
				halign: 'center'
				font_size:'34sp'

			MyButton2:
				text:'Try Again'
			Widget:
				size_hint_y:0.05
			MyButton2:
				text:'Back'
				on_release:root.chevron_left()
			Widget:
				size_hint_y:0.05
			MyButton2:
				text:'Next'
				on_release:root.arrow_right()

			Widget:
				size_hint_y:0.2

		NavButtons: