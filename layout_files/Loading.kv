#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:set size_x 564
#:set size_y 305

#:set size_x_subtitle 733
#:set size_y_subtitle 132


<LoadingPage>:
    # root.manager.transition:FadeTransition()
    BoxLayout:
        md_bg_color: utils.get_color_from_hex('#455A64')
        orientation:'vertical'
        id:box_layout

        Label:
            id:logo
            md_bg_color: utils.get_color_from_hex('#455A64')
            canvas:
                Rectangle:
                    id:rect
                    source: 'pics/logo_simple2.png'
                    pos:(self.parent.size[0]//2-size_x//2,self.parent.size[1]//2)
                    size: (size_x,size_y)


        Label:
            id:logo
            md_bg_color: utils.get_color_from_hex('#455A64')
            canvas:

                Rectangle:
                    source: 'pics/logo_subtitle.png'
                    pos:(self.parent.size[0]//2-size_x_subtitle//2,self.parent.size[1]//6)
                    size:(size_x_subtitle,size_y_subtitle)