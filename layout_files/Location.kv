<LocationPage>:
	BoxLayout:

		orientation:'vertical'
		canvas.before:
			Color:
				rgba: BG_COLOR
			Rectangle:
				size: self.size
				pos: self.pos

		ActionBar:
			ActionView:
				ActionPrevious:
					title: 'Location'
					# with_previous: False
					on_release: root.chevron_left()

		Label:
			text:'Please select the category that you think best describes the community where you live:'
			pos_hint:{'center_x': 0.5, 'center_y': 0.5}
			color: TXT_COLOR
			size_hint_x:0.9
			size_hint_y:0.6

		Widget:
			size_hint_y:0.2
		BoxLayout:
			orientation:'horizontal'
			size_hint_x:0.7
			pos_hint:{'center_x': 0.5, 'center_y': 0.5}
			ScrollView:
				# id:listt
				BoxLayout:
					orientation: 'vertical'
					Button:
						text:'Urban'
						background_normal: ''
					    background_color: 1, .3, .4, .85
						on_release: root.toggle(self)

					Button:
						text:'Large Rural\n10,000 – 49,999 residents'
						secondary_text:''
						secondary_font_style:'Caption'
						halign:'left'
						on_release: root.toggle(self)

					Button:
						text:'Small Rural'
						secondary_text:'2,500 – 9,999 residents'
						secondary_font_style:'Caption'
						halign:'left'
						on_release: root.toggle(self)

					Button:
						text:'Isolated'
						secondary_text:'<2,500 residents'
						secondary_font_style:'Caption'
						halign:'left'
						on_release: root.toggle(self)

					Switch:



		BoxLayout:
			orientation: 'horizontal'
			Button:
				text:'                     <                       '
				size_hint_x:1
				size_hint_y:0.3
				on_release:
					root.manager.current='SociodemographicPage'
					root.manager.transition.direction="right"
			Button:
				text:'                     >                       '
				size_hint_x:1
				size_hint_y:0.3
				on_release:
					root.manager.current='AirPollutionLandingPage'
					root.manager.transition.direction="left"
