#:set hypertension_toolbar_title 'Hypertension'

<HyperTensionLandingPage>:
    BoxLayout:
        orientation: 'vertical'

        MyActionBar:
            title:hypertension_toolbar_title

        Label:
            text:''
            size_hint_y:0.3
        Label:
            text: 'High blood pressure, especially in midlife, is associated with at least an 18% increase in the risk for Alzheimer\'s'
            font_size:'14sp'
            halign: 'left'
            size_hint_x:0.8
            pos_hint:{'center_x':0.5}

        Label:
            # font_size:'2xw0sp'
            text: 'Answer the following questions about hypertension'
            # text_color:DARK_BLUE
            theme_text_color:"Hint"
            halign: 'left'
            size_hint_x:0.8
            # size_hint_x:0.5
            pos_hint:{'center_x':0.5}

        Button:
            text:"Begin"
            font_style:'Button'
            # size_hint_x:0.7
            pos_hint:{'center_x':0.5}
            on_release: root.arrow_right()


        NavButtons

<HyperTensionPage>:
    BoxLayout:
        orientation: 'vertical'
        MyActionBar:
            title:hypertension_toolbar_title


        Label:
            text:'Have you ever been told by a doctor or other health professional that you had hypertension, also called high blood pressure?'
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint_x:0.9
            size_hint_y:0.6


        BoxLayout:
            orientation:'horizontal'

            Widget:
                size_hint_x:0.2
            Button:
                text:'Yes'
                size_hint_x:1
                on_release: root.button_press(0)
            Widget:
                size_hint_x:0.1

            Button:
                text:'No'
                size_hint_x:1
                on_release: root.button_press(1)
            Widget:
                size_hint_x:0.2


        NavButtons


<HyperTensionScorePage>:
    score_label:score_label
    BoxLayout:
        orientation: 'vertical'

        MyActionBar:
            title:hypertension_toolbar_title


        Label:
            text: 'Your score is:'
            halign: 'center'

        Label:
            id:score_label
            text: ''
            halign: 'center'

        Button:
            id:restart_button
            text:'Try Again'
            font_style:'Button'
            size_hint_x:0.7
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.reset_quiz()
        Widget:
            size_hint_y:0.05
        Button:
            id:next_section
            text:'Back'
            font_style:'Button'
            size_hint_x:0.7
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.chevron_left()
        Widget:
            size_hint_y:0.05
        Button:
            id:next_section
            text:'Next'
            font_style:'Button'
            size_hint_x:0.7
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.arrow_right()


        Label:
            size_hint_y:0.7


        NavButtons