<NavButtons>:
    orientation: 'horizontal'
    size_hint_y:0.3
    Button:
        background_color: BTN_COLOR
        size_hint_y:0.5
        text:'                     <                       '
        on_release:root.parent.parent.arrow_left()
    Button:
        background_color: BTN_COLOR
        size_hint_y:0.5
        text:'                     >                       '
        on_release:
            # root.parent.ids['AirPollutionPage'].ids['android_tabs'].switch_tab('1')
            root.parent.parent.arrow_right()