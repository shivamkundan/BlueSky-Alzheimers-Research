#:set depression_Q_main 'Over the last 2 weeks, how often have you been bothered by the following problems:'
#:set depression_Q0 'Little interest or pleasure in doing things'
#:set depression_Q1 'Feeling down, depressed, or hopeless'
#:set depression_toolbar_title 'Depression'

<DepressionLandingPage>:
    BoxLayout:
        orientation: 'vertical'

        MyActionBar:
            title:depression_toolbar_title

        Label:
            text:''
            size_hint_y:0.3
        Label:
            text: 'Depression, defined as having little interest in doing things and feeling down/hopeless more often than not in a 2-week period, is linked to increased risk of Alzheimer\'s disease.'
            font_size:'14sp'
            halign: 'left'
            size_hint_x:0.8
            pos_hint:{'center_x':0.5}

        Label:
            # font_size:'2xw0sp'
            text: 'Answer the following questions about depression'
            # text_color:DARK_BLUE
            theme_text_color:"Hint"
            halign: 'left'
            size_hint_x:0.8
            # size_hint_x:0.5
            pos_hint:{'center_x':0.5}

        MyButton2:
            text:"Begin"
            # font_style:'Button'
            # # size_hint_x:0.7
            # pos_hint:{'center_x':0.5}
            on_release: root.arrow_right()

        NavButtons

<DepressionPage>:
    BoxLayout:
        orientation: 'vertical'
        MyActionBar:
            title:depression_toolbar_title

        Label:
            id:label1
            text_size: root.width*self.size_hint_x, None
            size: self.texture_size
            color: TXT_COLOR
            text:depression_Q_main
            halign:'center'
            pos_hint:{'center_x':0.5}
            size_hint_y:0.5

        # BoxLayout:
        Label:
            size_hint_x:0.8
            # size_hint_y:0.6
            id:q_label
            text_size: root.width*self.size_hint_x, None
            color: TXT_COLOR
            size: self.texture_size
            text: depression_Q0
            halign:'center'
            pos_hint:{'center_x':0.5,'center_y':0.3}
            size_hint_y:0.5

        # BoxLayout:
        #     orientation:'vertical'
        #     # Button:
        #     #     icon:'numeric-3'
        #     #     text:'Not at all'
        #     #     halign:'left'
        #     #     size_hint_x:0.8
        #     #     font_style:'Button'
        #     #     theme_text_color: "Custom"
        #     #     # color_icon_root_button: app.theme_cls.accent_color
        #     #     pos_hint:{'center_x':0.5}

        MyButton2:
            text:'Not at all'
            on_release: root.button_press(3)

        Label:
            text:''
            size_hint_y:0.05

        MyButton2:
            text:'Several days'
            on_release: root.button_press(2)
        Label:
            text:''
            size_hint_y:0.05

        MyButton2:
            text:'more than half the days'
            on_release: root.button_press(1)
        Label:
            text:''
            size_hint_y:0.05

        MyButton2:
            text:'nearly everyday'
            on_release: root.button_press(0)
        Widget:
            size_hint_y:0.25


        NavButtons


<DepressionScorePage>:
    score_label:score_label
    BoxLayout:
        orientation: 'vertical'
        MyActionBar:
            title:depression_toolbar_title

        Label:
            text: 'Your score is:'
            halign: 'center'

        Label:
            id:score_label
            text: ''
            halign: 'center'

        MyButton2:
            # id:restart_button
            text:'Try Again'
            # font_style:'Button'
            # size_hint_x:0.7
            # pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.reset_quiz()
        Widget:
            size_hint_y:0.05
        MyButton2:
            # id:next_section
            text:'Back'
            # font_style:'Button'
            # size_hint_x:0.7
            # pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.chevron_left()
        Widget:
            size_hint_y:0.05
        MyButton2:
            # id:next_section
            text:'Next'
            # font_style:'Button'
            # size_hint_x:0.7
            # pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.arrow_right()


        Label:
            size_hint_y:0.7


        NavButtons