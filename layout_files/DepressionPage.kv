#:set depression_Q_main 'Over the last 2 weeks, how often have you been bothered by the following problems:'
#:set depression_Q0 'Little interest or pleasure in doing things'
#:set depression_Q1 'Feeling down, depressed, or hopeless'
#:set depression_toolbar_title 'Depression'

<DepressionLandingPage>:
    BoxLayout:
        orientation: 'vertical'

        MyActionBar:
            title:depression_toolbar_title


        WrapLabel:
            id:label1
            text: 'Depression, defined as having little interest in doing things and feeling down/hopeless more often than not in a 2-week period, is linked to increased risk of Alzheimer\'s disease.'
            padding: dp(0), dp(30)

        Widget:
            size_hint_y:0.2

        WrapLabel:
            size_hint_x:0.8
            # font_size:'2xw0sp'
            text: 'Answer the following questions about depression'
            # text_color:DARK_BLUE
            theme_text_color:"Hint"
            halign: 'center'
            size_hint_x:0.8
            color: TXT_COLOR
            # size_hint_x:0.5
            pos_hint:{'center_x':0.5}
            size_hint_y:0.5

        Widget:
            size_hint_y:0.1

        MyButton3:
            text:"Begin"
            on_release: root.arrow_right()

        NavButtons

<DepressionPage>:

    BoxLayout:
        orientation: 'vertical'
        MyActionBar:
            title:depression_toolbar_title

        BoxLayout:
            orientation: 'vertical'
            size_hint_y:0.5
            Label:
                id:label1
                text_size: root.width*self.size_hint_x, None
                size: self.texture_size
                color: TXT_COLOR
                text:depression_Q_main
                halign:'center'
                pos_hint:{'center_x':0.5}
                # size_hint_y:0.5

            # BoxLayout:
            Label:
                size_hint_x:0.8
                # size_hint_y:0.6
                id:q_label
                text_size: root.width*self.size_hint_x, None
                color: TXT_COLOR
                size: self.texture_size
                text: ""
                halign:'center'
                pos_hint:{'center_x':0.5,'center_y':0.3}
                # size_hint_y:0.5


        BoxLayout:
            orientation:'vertical'
            size_hint_y:0.7
            MyButton2:
                text:'Not at all'
                on_release: root.button_press(3)

            Widget:
                size_hint_y:0.05

            MyButton2:
                text:'Several days'
                on_release: root.button_press(2)
            Widget:
                size_hint_y:0.05

            MyButton2:
                text:'more than half the days'
                on_release: root.button_press(1)
            Widget:
                size_hint_y:0.05

            MyButton2:
                text:'nearly everyday'
                on_release: root.button_press(0)
            Widget:
                size_hint_y:0.05


        NavButtons

# -------------
<DepressionScorePage>:
    score_label:score_label
    BoxLayout:
        orientation: 'vertical'

        MyActionBar:
            title:depression_toolbar_title

        BoxLayout:
            orientation:'vertical'
            Label:
                text: 'Your score is:'
                color: TXT_COLOR
                halign: 'center'
                font_size:'16sp'

            Label:
                id:score_label
                text: ''
                color: TXT_COLOR
                halign: 'center'
                font_size:'34sp'

            MyButton2:
                text:'Try Again'
            Widget:
                size_hint_y:0.05
            MyButton2:
                text:'Back'
                on_release:root.chevron_left()
            Widget:
                size_hint_y:0.05
            MyButton2:
                text:'Next'
                on_release:root.arrow_right()

            Widget:
                size_hint_y:0.2

        NavButtons: