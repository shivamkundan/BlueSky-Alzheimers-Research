            size_hint_x:0.9
            text_color:1,1,1,1

<DepressionScorePage>:
    score_label:score_label
    BoxLayout:
        orientation: 'vertical'
        MyActionBar:
            title:depression_toolbar_title

        Label:
            text: 'Your score is:'
            halign: 'center'

        Label:
            id:score_label
            text: ''
            halign: 'center'

        Button:
            id:restart_button
            text:'Try Again'
            font_style:'Button'
            size_hint_x:0.7
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.reset_quiz()
        Widget:
            size_hint_y:0.05
        Button:
            id:next_section
            text:'Back'
            font_style:'Button'
            size_hint_x:0.7
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.chevron_left()
        Widget:
            size_hint_y:0.05
        Button:
            id:next_section
            text:'Next'
            font_style:'Button'
            size_hint_x:0.7
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            on_release:root.arrow_right()


        Label:
            size_hint_y:0.7


        NavButtons